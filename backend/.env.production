# Server Configuration
PORT=8080
NODE_ENV=production

# Database
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AWS S3 Configuration
AWS_S3_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_S3_ACCESS_KEY=your-access-key-id
AWS_S3_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_SERVER_URL=https://your-bucket-name.s3.amazonaws.com/

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_or_sk_live_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_or_pk_live_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Frontend URL (for CORS and password reset emails)
FRONTEND_URL=https://your-frontend-url.awsapprunner.com

# Mailgun Configuration (for sending emails)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.mailgun.org
EMAIL_FROM=noreply@your-domain.com

